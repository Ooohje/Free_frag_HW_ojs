<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/name_first_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첫번째 화면(명화 &amp; 프래그먼트 설명)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/name_second_btn"
        android:layout_marginVertical="16dp" />

    <Button
        android:id="@+id/name_second_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="두번째 화면(룰렛 &amp; 구글맵 &amp; 유럽 사진)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_first_btn"
        app:layout_constraintBottom_toTopOf="@id/name_third_btn"
        android:layout_marginVertical="16dp" />

    <Button
        android:id="@+id/name_third_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="세번째 화면(만보기 &amp; 유럽 영상)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_second_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>